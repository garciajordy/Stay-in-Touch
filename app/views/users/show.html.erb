<div class="user-page">
    <section class="user-section">
        <h2><%= "Name: #{@user.name}" %></h2>
        <h2><%= "Name: #{@user.email}" %></h2>
        <% @friends = @user.friends.include?(current_user) %>
        <% if @user.id != current_user.id && !@friends  %>
        <%= friend_or_unfriend_btn(@user) %>
        <% end %>
        <article class="timeline">
            <h3>Recent posts:</h3>
            <ul class="posts">
                <%= render @posts %>
            </ul>
        </article>
    </section>
    <div class="pending-con">
        <% if current_user.id == @user.id %>
        <div>
            <% if @pending.any?%>
            <h3>Pending request</h3>
            <% end %>
            <% @pending.each do |mess| %>
            <ul>
                <li><%= User.find(mess.user_id).name %><%= accept_btn(User.find(mess.user_id))%><%=decline_btn(User.find(mess.user_id))%></li>
            </ul>
            <% end %>
        </div>
        <div>
            <% if @sent.any?%>
            <h3>Sent request</h3>
            <% end %>
            <% @sent.each do |mess| %>
            <ul>
                <li><%= User.find(mess.friend_id).name %> <%=friend_or_unfriend_btn(User.find(mess.friend_id))%></li>

            </ul>
            <% end %>
        </div>
        <% end %>
        <div>
            <h3>Friends</h3>
            <% @user.friends.each do |friend|%>
            <ul>
            <li><%= friend.name%></li>
            </ul>
            <%end%>
        </div>
    </div>
</div>